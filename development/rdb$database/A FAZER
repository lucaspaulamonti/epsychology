/*
    STATE: TABLE CONTAINING INFORMATION ABOUT STATES
*/

CREATE TABLE STATE(
    ID_ SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(45) NOT NULL,
    IDCOUNTRY_ INTEGER NOT NULL,

    FOREIGN KEY (IDCOUNTRY_) REFERENCES COUNTRY(ID_)
);

COMMENT ON TABLE STATE IS 'TABLE CONTAINING INFORMATION ABOUT STATES';
COMMENT ON COLUMN STATE.ID_ IS 'UNIQUE IDENTIFIER FOR EACH STATE';
COMMENT ON COLUMN STATE.NAME IS 'NAME OF THE STATE';
COMMENT ON COLUMN STATE.IDCOUNTRY_ IS 'FOREIGN KEY REFERENCING THE UNIQUE IDENTIFIER OF THE COUNTRY IN THE COUNTRY TABLE';

