/*

*/

CREATE TABLE DIAGNOSIS (
	ID_ SERIAL NOT NULL PRIMARY KEY,
	CID VARCHAR(10) NOT NULL UNIQUE,
	NAME VARCHAR(255) NOT NULL UNIQUE,
	IDSUBCLASSIFICATION_ INTEGER NOT NULL,

	FOREIGN KEY (IDSUBCLASSIFICATION_) REFERENCES SUBCLASSIFICATION (ID_)
);

