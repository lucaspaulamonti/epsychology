/*
    CITY: TABLE CONTAINING INFORMATION ABOUT CITIES
*/

CREATE TABLE CITY (
    ID_ SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(45) NOT NULL,
    IDSTATE_ INTEGER NOT NULL,

    FOREIGN KEY (IDSTATE_) REFERENCES STATE(ID_)
);

COMMENT ON TABLE CITY IS 'TABLE CONTAINING INFORMATION ABOUT CITIES';
COMMENT ON COLUMN CITY.ID_ IS 'UNIQUE IDENTIFIER FOR EACH CITY';
COMMENT ON COLUMN CITY.NAME IS 'NAME OF THE CITY';
COMMENT ON COLUMN CITY.IDSTATE_ IS 'FOREIGN KEY REFERENCING THE UNIQUE IDENTIFIER OF THE STATE IN THE STATE TABLE';

INSERT INTO CITY (NAME, IDSTATE_) VALUES ('ARACATUBA', 24);

