	ID_ SERIAL NOT NULL PRIMARY KEY,
	NAME VARCHAR(15) NOT NULL UNIQUE
);

COMMENT ON TABLE BLOOD IS 'TABLE THAT STORES INFORMATION ABOUT BLOOD TYPES';
COMMENT ON COLUMN BLOOD.ID_ IS 'UNIQUE IDENTIFIER FOR EACH BLOOD TYPE';
COMMENT ON COLUMN BLOOD.NAME IS 'ACRONYM THAT COMBINES BLOOD TYPE WITH AGLUTININ AND RH FACTOR';

INSERT INTO BLOOD (NAME) VALUES ('A+ ANTI-B');
