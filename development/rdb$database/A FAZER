/*
	COUNTRY: TABLE CONTAINING INFORMATION ABOUT COUNTRIES
*/

CREATE TABLE COUNTRY(
    ID_ SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(45) NOT NULL UNIQUE
);

COMMENT ON TABLE COUNTRY IS 'TABLE CONTAINING INFORMATION ABOUT COUNTRIES';
COMMENT ON COLUMN COUNTRY.ID_ IS 'UNIQUE IDENTIFIER FOR EACH COUNTRY';
COMMENT ON COLUMN COUNTRY.NAME IS 'NAME OF THE COUNTRY';

